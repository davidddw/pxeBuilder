# this is generated by pxebuilder.
install
nfs --server=${nfs_ip} --dir=${nfs_ans}
lang en_US.UTF-8
keyboard us
network --device ${host_nic} --onboot yes --bootproto static --ip ${host_ipaddr} --netmask ${host_mask} --gateway ${host_gate} --hostname ${hostname}
rootpw ${host_pass}
firewall --enabled --port=22:tcp
authconfig --enableshadow --enablemd5
selinux --permissive
timezone Asia/Shanghai
bootloader --location=mbr --driveorder=sda,sdb --append="rhgb quiet"
clearpart --all --initlabel

part /boot --fstype ext3 --size=100 --ondisk=sda
part pv.3 --size=0 --grow --ondisk=sda
volgroup VolGroup00 --pesize=32768 pv.3
logvol / --fstype ext3 --name=LogVol00 --vgname=VolGroup00 --size=1024 --grow
logvol swap --fstype swap --name=LogVol01 --vgname=VolGroup00 --size=1000 --grow --maxsize=5952

reboot

%packages --nobase
@core
%end
