# this is generated by pxebuilder.
install
nfs --server=${nfs_ip} --dir=${nfs_dir}
lang en_US.UTF-8
keyboard us
network --device ${host_nic} --onboot yes --bootproto static --ip ${host_ipaddr} --netmask ${host_mask} --gateway ${host_gate} --hostname ${hostname}
rootpw ${host_pass}
firewall --service=ssh
authconfig --enableshadow --passalgo=sha512
selinux --permissive
timezone --utc Asia/Shanghai
bootloader --location=mbr --driveorder=sda,sdb --append="crashkernel=auto console=hvc0 rhgb quiet"
clearpart --all --initlabel

part /boot --fstype=ext4 --size=200 --ondisk=sda
part pv.202002 --grow --size=1 --ondisk=sda
volgroup VolGroup --pesize=4096 pv.202002
logvol / --fstype=ext4 --name=lv_root --vgname=VolGroup --grow --size=1024 --maxsize=51200
logvol swap --name=lv_swap --vgname=VolGroup --size=1000 --grow --maxsize=5952

reboot

%packages --nobase
@core
%end
